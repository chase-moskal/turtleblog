{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "source",
		"outDir": "dist",
		"target": "esnext",
		"lib": ["es6"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"source/**/*",
		"types-custom/**/*"
	],
	"exclude": [
		"source/_archive/**/*"
	]
}
