{
	"name": "turtleblog",
	"version": "0.0.0-dev.9",
	"description": "concept blog generator",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "UNLICENSED",
	"main": "dist",
	"bin": {
		"turtle-read": "dist/cli/turtle-read.js",
		"turtle-transform-metadata-pass": "dist/cli/turtle-transform-metadata-pass.js",
		"turtle-generate": "dist/cli/turtle-generate.js",
		"turtle-transform-output-pass": "dist/cli/turtle-transform-output-pass.js",
		"turtle-write": "dist/cli/turtle-write.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"prepare": "run-s build && run-p test build-demo && echo done production build ✔",
		"build": "run-s build-clean build-barrel && run-p build-scripts build-styles",
		"build:debug": "run-s build && echo done debug build ✔",
		"build-clean": "rimraf dist dist-demo && mkdirp dist dist-demo",
		"build-barrel": "barrelsby --exclude \"_archive\" --exclude \"\\.test\\.ts\" --directory source --delete && sed -i -e 's/;$//' source/index.ts",
		"build-scripts": "tsc",
		"build-styles": "sass --source-map source-demo/style.scss dist-demo/style.css",
		"build-demo": "node dist/cli/turtle-read --site-title turtleblog --source-dir source-demo | node dist/cli/turtle-generate | node dist/cli/turtle-write --dist-dir dist-demo",
		"test": "jest --coverage",
		"start": "http-server dist-demo",
		"deploy": "bash deploy dist-demo gh-pages"
	},
	"jest": {
		"verbose": true
	},
	"devDependencies": {
		"@types/get-stdin": "5.0.1",
		"@types/jest": "23.3.2",
		"@types/node": "10.9.4",
		"@types/pug": "2.0.4",
		"@types/shelljs": "0.8.0",
		"@types/shortid": "0.0.29",
		"@types/uuid": "3.4.4",
		"barrelsby": "1.0.2",
		"browserify": "16.2.2",
		"envify": "4.1.0",
		"fast-glob": "2.2.2",
		"http-server": "0.11.1",
		"jest": "23.6.0",
		"jstransformer-markdown-it": "2.1.0",
		"markdown-it": "8.4.2",
		"mkdirp": "0.5.1",
		"npm-run-all": "4.1.3",
		"pug": "2.0.3",
		"pug-cli2": "1.0.0-alpha6.1",
		"rimraf": "2.6.2",
		"sass": "1.13.0",
		"shelljs": "0.8.2",
		"tsify": "4.0.0",
		"typescript": "3.0.1",
		"uglify-es": "3.3.9",
		"uglifyify": "5.0.1"
	},
	"dependencies": {
		"commander": "2.18.0",
		"fibers": "3.0.0",
		"get-stdin": "6.0.0",
		"js-yaml": "3.12.0",
		"recursive-readdir": "2.2.2",
		"shortid": "2.2.13",
		"uuid": "3.3.2"
	}
}
